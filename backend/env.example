# Server Configuration
PORT=3000
# For Render: Use PORT=10000 or let Render set it automatically
NODE_ENV=development
# For Production: Set NODE_ENV=production

# MongoDB Atlas Connection
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/hotel_navjeevan?retryWrites=true&w=majority

# Session Secret
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# Admin Default Credentials (change after first login)
ADMIN_EMAIL=admin@hotelnavjeevanpalace.com
ADMIN_PASSWORD=Admin@123

# Brevo (formerly Sendinblue) Email API Configuration
# Get your API key from: https://app.brevo.com/settings/keys/api
BREVO_API_KEY=your-brevo-api-key-here
BREVO_SENDER_EMAIL=noreply@hotelnavjeevanpalace.com
BREVO_SENDER_NAME=Hotel Navjeevan Palace

# Legacy Email Configuration (for backward compatibility, not used with Brevo)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=Hotel Navjeevan Palace <your-email@gmail.com>

# Brevo SMS Configuration
# Uses the same BREVO_API_KEY as email
# Configure sender name in Brevo Dashboard → SMS → Senders
SMS_PROVIDER=brevo
BREVO_SMS_SENDER=NAVJEE

# Legacy SMS Configuration (MSG91 - for backward compatibility)
MSG91_AUTH_KEY=your-msg91-auth-key
MSG91_SENDER_ID=NAVJEE

# Bank Details for Online Payment
BANK_NAME=State Bank of India
BANK_ACCOUNT_NAME=Hotel Navjeevan Palace
BANK_ACCOUNT_NUMBER=1234567890123456
BANK_IFSC=SBIN0001234
BANK_UPI_ID=navjeevanpalace@paytm

# Frontend URL (for CORS and redirects)
# Development:
FRONTEND_URL=http://localhost:8888
# Production (Netlify):
# FRONTEND_URL=https://your-app-name.netlify.app
# NETLIFY_URL=https://your-app-name.netlify.app

